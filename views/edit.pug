extends layout

block edit
    div(class="row")
        div(class="col-md-3 p-4 mx-auto")
            div(class="card")
                div(class="card-body mx-auto")
                    h5(class="card-title text-center mb-3") Editar Contacto
                    form(action=`/contacto/edit/${id}`, method="post")
                        div(class="mb-3")
                            input(type="text" placeholder="Nombre" class="form-control" name="nombre" value=nombre)
                        div(class="mb-3")
                            input(type="text" placeholder="Numero" class="form-control" name="numero" value=numero)
                        div(class="d-grid gap-2 mb-3")
                            button(type="submit" class="btn btn-success w-auto") Guardar